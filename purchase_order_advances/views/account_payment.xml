<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_account_payment_tree_purchase_order" model="ir.ui.view">
            <field name="name">account.payment.tree</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_tree" />
            <field name="arch" type="xml">
                <field name="journal_id" position="after">
                    <field name="purchase_order_id" />
                    <field name="payment_reference" />
                </field>
            </field>
        </record>

        <record id="view_account_payment_form_purchase_order" model="ir.ui.view">
            <field name="name">account.payment.form</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form" />
            <field name="arch" type="xml">
                <field name="journal_id" position="after">
                    <field name="purchase_order_id" attrs="{'readonly': [('state','=','reconciled')]}" domain="" options="{'no_create': 1}"/>
                </field>
            </field>
        </record>

    </data>
</odoo>
