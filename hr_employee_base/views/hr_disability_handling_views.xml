<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_disability_handling_view_tree" model="ir.ui.view">
        <field name="name">hr.disability.handling.view.tree</field>
        <field name="model">hr.disability.handling</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="hr_disability_handling_action" model="ir.actions.act_window">
        <field name="name">Manejo de Incapacidades</field>
        <field name="res_model">hr.disability.handling</field>
        <field name="view_mode">tree</field>
        <field name="context">{}</field>
    </record>

    <menuitem
            id="hr_disability_handling_menu_action"
            name="Manejo de Incapacidades"
            action="hr_disability_handling_action"
            parent="hr.menu_human_resources_configuration"/>

</odoo>
