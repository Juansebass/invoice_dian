<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_job_role_view_tree" model="ir.ui.view">
        <field name="name">hr.job.role.view.tree</field>
        <field name="model">hr.job.role</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="job_id"/>
            </tree>
        </field>
    </record>

    <record id="hr_job_role_action" model="ir.actions.act_window">
        <field name="name">Roles de cargos</field>
        <field name="res_model">hr.job.role</field>
        <field name="view_mode">tree</field>
        <field name="context">{}</field>
    </record>

    <menuitem
            id="hr_job_role_menu_action"
            name="Roles de cargos"
            action="hr_job_role_action"
            parent='hr_recruitment.menu_hr_recruitment_configuration'/> 
</odoo>
