<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
      <record id="view_hr_employee_unit_form" model="ir.ui.view">
      <field name="name">hr.employee.unit.form</field>
      <field name="model">hr.employee.unit</field>
      <field name="arch" type="xml">
        <form string="unidades">
           <group>
             <group>
                 <field name="name" string="Unidad Organizativa" required="True"/>
                 <field name="company_id" string="Compañia" required="True"/>
             </group>
           </group>   
        </form>
      </field>
    </record> 

    <record id="view_hr_employee_unit_tree" model="ir.ui.view">
      <field name="name">hr.employee.unit.tree</field>
      <field name="model">hr.employee.unit</field>
        <field name="arch" type="xml">
            <tree string="sector unidades">
              <field name="name" string="Unidad Organizativa"/>
              <field name="company_id" string="Compañia"/>
            </tree>
        </field>
    </record>

    <record id="action_hr_employee_unit" model="ir.actions.act_window">
        <field name="name">Unidades Organizativas</field>
        <field name="res_model">hr.employee.unit</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            hr.employee.unit
          </p>
        </field>
    </record>

    <menuitem name='Unidades Organizativas'
            action='action_hr_employee_unit'
            id='menu_hr_employee_unit'
            parent='hr_recruitment.menu_hr_recruitment_configuration'
            sequence='7'/> 
    </data>
</odoo>

