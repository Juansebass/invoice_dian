                                    <field name="soat" string="Seguro Obligatorio Vigente" filename="soat_filename"/>
                                    <field name="soat_filename" invisible="True"/>
                                    <field name="revision_tecnico_mecanica" string="Revisión Técnico Mecánica" filename="revision_tecnico_mecanica_emp_filename"/>
                                    <field name="revision_tecnico_mecanica_emp_filename" invisible="True"/>
                                    <field name="induction_center" string="Certificado de Inducción" filename="induction_center_emp_filename"/>
                                    <field name="induction_center_emp_filename" invisible="True"/>
                                    <field name="sena_cert" string="Certificación Sena" filename="sena_certfile_name"/>
                                    <field name="sena_certfile_name" invisible="True"/>
                                </group>
                               
                            </group>
                        </page>
