                        <field name="vehicle_ownership_emp" string="Carta de Propiedad Vehículo o Autorización del Propietario" filename="vehicle_ownership_emp_filename" />
                        <field name="vehicle_ownership_emp_filename" invisible="True"/>
                        <field name="runt_cert_emp" string="Certificado Inscripción RUNT" filename="runt_cert_emp_filename" />
                        <field name="runt_cert_emp_filename" invisible="True"/>
                        <field name="soat" string="Seguro Obligatorio Vigente"  filename="soat_filename"/>
                        <field name="soat_filename" invisible="True"/>
                        <field name="revision_tecnico_mecanica_emp" string="Revisión Técnico Mecánica" filename="revision_tecnico_mecanica_emp_filename" />
                        <field name="revision_tecnico_mecanica_emp_filename" invisible="True"/>
                        <field name="induction_center_emp" string="Certificado de Inducción" filename="induction_center_emp_filename" />
