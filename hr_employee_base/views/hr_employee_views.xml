                        <field name="education_cert_emp" string="Certificados de estudio"  filename="education_cert_emp_filename" />
                        <field name="education_cert_emp_filename" invisible="True"/>
                        <field name="laboral_cert_emp" string="Certificados laborales"  filename="laboral_cert_emp_filename" />
                        <field name="laboral_cert_emp_filename" invisible="True"/>
                        <field name="cv_emp" string="Hoja de vida"  filename="cv_emp_filename" />
                        <field name="cv_emp_filename" invisible="True"/>
                    </group>
                    <group name="documentos_personales">
