                        <field name="disciplinary_background_emp_filename" invisible="True"/>
                        <field name="background_validation_emp" string="Validación de Antecedentes" filename="background_validation_emp_filename" />
                        <field name="background_validation_emp_filename" invisible="True"/>
                    </group>
                </group>
                <group>
                    <group name="documentos_personales2">
                        <field name="immediate_boss_interview_emp" string="Entrevista jefe inmediato" filename="immediate_boss_interview_emp_filename" />
                        <field name="immediate_boss_interview_emp_filename" invisible="True"/>
