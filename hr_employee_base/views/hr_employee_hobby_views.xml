<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
      <record id="view_hr_employee_hobby_form" model="ir.ui.view">
      <field name="name">hr.employee.hobby.form</field>
      <field name="model">hr.employee.hobby</field>
      <field name="arch" type="xml">
        <form string="hobbies">
           <group>
             <group>
                 <field name="name" string="Hobby"/>
             </group>
           </group>
        </form>
      </field>
    </record>

    <record id="view_hr_employee_hobby_tree" model="ir.ui.view">
      <field name="name">hr.employee.hobby.tree</field>
      <field name="model">hr.employee.hobby</field>
        <field name="arch" type="xml">
            <tree string="sector hobbies">
             <field name="name" string="hobbies"/>
            </tree>
        </field>
    </record>

    <record id="action_hr_employee_hobby" model="ir.actions.act_window">
        <field name="name">hr.employee.hobby</field>
        <field name="res_model">hr.employee.hobby</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Hobbies
          </p>
        </field>
    </record>

    <menuitem name='Hobbies'
            action='action_hr_employee_hobby'
            id='menu_hr_employee_hobby'
            parent='hr_recruitment.menu_hr_recruitment_configuration'
            sequence='15' /> 

    </data>
</odoo>

