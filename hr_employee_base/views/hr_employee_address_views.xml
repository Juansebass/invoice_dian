<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
      <record id="view_hr_employee_address_form" model="ir.ui.view">
      <field name="name">view.hr.employee.address.form</field>
      <field name="model">hr.employee.address</field>
      <field name="arch" type="xml">
        <form string="direccion">
           <group>
             <group>
                <field name="name"/>
                <field name="identificador" string="Identificador"/>
             </group>
           </group>
        </form>
      </field>
    </record>

    <record id="view_hr_employee_address_tree" model="ir.ui.view">
      <field name="name">view.hr.employee.address.tree</field>
      <field name="model">hr.employee.address</field>
        <field name="arch" type="xml">
            <tree string="sector direccion">
               <field name="identificador" string="Identificador"/>
               <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="action_hr_employee_address" model="ir.actions.act_window">
        <field name="name">Dirección</field>
        <field name="res_model">hr.employee.address</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            direccion
          </p>
        </field>
    </record>

    <menuitem name='Dirección'
            action='action_hr_employee_address'
            id='menu_hr_employee_address'
            parent='contacts.menu_country_state_partner'
            sequence='99' /> 

    </data>
</odoo>

