<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
      <record id="view_hr_employee_area_form" model="ir.ui.view">
      <field name="name">view.hr.employee.area.form</field>
      <field name="model">hr.employee.area</field>
      <field name="arch" type="xml">
        <form string="area">
           <group>
             <group>
                <field name="name" string="Área de Personal"/> 
                <field name="identifier" string="Identificador"/>
             </group>
           </group>   
        </form>
      </field>
    </record> 

    <record id="view_hr_employee_area_tree" model="ir.ui.view">
      <field name="name">view.hr.employee.area.tree</field>
      <field name="model">hr.employee.area</field>
        <field name="arch" type="xml">
            <tree string="sector area">
                <field name="identifier" string="Identificador"/>
                <field name="name" string="Área de Personal"/>
            </tree>
        </field>
    </record>

    <record id="action_hr_employee_area" model="ir.actions.act_window">
        <field name="name">Área de Personal</field>
        <field name="res_model">hr.employee.area</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Área de Personal
          </p>
        </field>
    </record>

    <menuitem name='Área de Personal'
            action='action_hr_employee_area'
            id='menu_hr_employee_area'
            parent='hr_recruitment.menu_hr_recruitment_configuration'
            sequence='26'/> 
    </data>   
</odoo>