<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
      <record id="view_hr_employee_cost_center_form" model="ir.ui.view">
      <field name="name">view.hr.employee.cost.center.form</field>
      <field name="model">hr.employee.cost.center</field>
      <field name="arch" type="xml">
        <form string="centro">
           <group>
             <group>
                 <field name="name" string="Centro de Costo"/>
                 <field name="number" string="Número Centro de Costo"/>
                 <field name="company_id" string="Compañía"/>
             </group>
           </group>
        </form>
      </field>
    </record> 

    <record id="view_hr_employee_cost_center_tree" model="ir.ui.view">
      <field name="name">view.hr.employee.cost.center.tree</field>
      <field name="model">hr.employee.cost.center</field>
        <field name="arch" type="xml">
            <tree string="sector centro">
               <field name="name" string="Centro de Costo"/>
               <field name="number" string="Número Centro de Costo"/>
               <field name="company_id" string="Compañía"/>
            </tree>
        </field>
    </record>

    <record id="action_hr_employee_cost_center" model="ir.actions.act_window">
        <field name="name">Centro de Costo</field>
        <field name="res_model">hr.employee.cost.center</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Centro de Costo
          </p>
        </field>
    </record>

    <menuitem name='Centro de Costo'
            action='action_hr_employee_cost_center'
            id='menu_hr_employee_cost_center'
            parent='hr_recruitment.menu_hr_recruitment_configuration'
            sequence='16' /> 
    </data>
</odoo>

