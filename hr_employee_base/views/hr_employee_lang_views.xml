<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
      <record id="view_hr_employee_lang_form" model="ir.ui.view">
      <field name="name">view.hr.employee.lang.form</field>
      <field name="model">hr.employee.lang</field>
      <field name="arch" type="xml">
        <form string="language">
           <group>
             <group>
                 <field name="applicant_id" string="Empleado/Aplicante"/>
                 <field name="name" string="Idioma"/>
                 <field name="domain_percentage" string="Porcentaje de Dominio"/>
                 <field name="po" string="Porcentaje" widget="progressbar"/>
             </group>
           </group>
        </form>
      </field>
    </record>

    <record id="view_hr_employee_lang_tree" model="ir.ui.view">
      <field name="name">view.hr.employee.lang.tree</field>
      <field name="model">hr.employee.lang</field>
        <field name="arch" type="xml">
            <tree string="sector language">
             <field name="applicant_id" string="Aplicante"/>
             <field name="employee_id" string="Empleado"/>
             <field name="name" string="Idioma"/>
             <field name="domain_percentage" string="Porcentaje de Dominio"/>
             <field name="po" string="Porcentaje" widget="progressbar"/>
            </tree>
        </field>
    </record>

    <record id="action_view_hr_employee_lang" model="ir.actions.act_window">
        <field name="name">Idiomas</field>
        <field name="res_model">hr.employee.lang</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Idiomas
          </p>
        </field>
    </record>

    <menuitem name='Idiomas'
            action='action_view_hr_employee_lang'
            id='menu_view_hr_employee_lang'
            parent='hr_recruitment.menu_hr_recruitment_configuration'
            sequence='14' /> 

    </data>   



    

    



</odoo>

