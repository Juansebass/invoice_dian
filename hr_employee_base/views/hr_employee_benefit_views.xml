<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
      <record id="view_hr_employee_beneficio_form" model="ir.ui.view">
      <field name="name">hr.employee.beneficio.form</field>
      <field name="model">hr.employee.beneficio</field>
      <field name="arch" type="xml">
        <form string="beneficio">
           <group>
             <group>
                <field name="name" string="Clase de Beneficio"/>
                <field name="identifier" string="Identificador"/>
              
             </group>
           </group>   
        </form>
      </field>
    </record> 

    <record id="view_hr_employee_beneficio_tree" model="ir.ui.view">
      <field name="name">hr.employee.beneficio.tree</field>
      <field name="model">hr.employee.beneficio</field>
        <field name="arch" type="xml">
            <tree string="sector beneficio">
              <field name="identifier" string="Identificador"/>
              <field name="name" string="Clase de Beneficio"/>
              
                
            </tree>
        </field>
    </record>

    <record id="action_hr_employee_beneficio" model="ir.actions.act_window">
        <field name="name">hr.employee.beneficio</field>
        <field name="res_model">hr.employee.beneficio</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            Beneficio
          </p>
        </field>
    </record>

    <menuitem name='Clase de Beneficio'
            action='action_hr_employee_beneficio'
            id='menu_hr_employee_beneficio'
            parent='hr_recruitment.menu_hr_recruitment_configuration'
            sequence='87'/> 
    </data>   
</odoo>