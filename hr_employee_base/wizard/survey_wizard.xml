<?xml version="1.0" ?>
<odoo>
    <record id="create_survey_form" model="ir.ui.view">
        <field name="name">survey.wizard.form</field>
        <field name="model">survey.wizard</field>
        <field name="arch" type="xml">
            <form string="Entrevistas">
                <sheet>
                    <group>
                        <field name="survey_id" domain="[('id', 'in', (survey_ids))]" required="True"/>  
                    </group>
                    <group>
                        <field name="applicant_id" invisible="True"/>
                        <field name="job_id" readonly="True"/>
                        <field name="survey_ids" readonly="True"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_send_survey" type="object" string="Enviar" class="oe_highlight"/>
                    <button string="Cancelar" class="btn-default" special="cancel" />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_open_survey_wizard" model="ir.actions.act_window">
        <field name="name">Seleccionar Entrevista</field>
        <field name="res_model">survey.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="hr.model_hr_job"/>
    </record>
    
    <record id="hr_applicant_form_inherit" model="ir.ui.view">
        <field name="name">hr.applicant.form.inherit</field>
        <field name="model">hr.applicant</field>
        <field name="inherit_id" ref="hr_recruitment_survey.hr_applicant_view_form_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_print_survey']" position="before">
                <button name="%(action_open_survey_wizard)d" icon="fa-user" class="oe_stat_button" type="action" string="Entrevistas"/>
            </xpath>
            <xpath expr="//button[@name='action_send_survey']" position="replace"/>       
        </field>
    </record>
</odoo>