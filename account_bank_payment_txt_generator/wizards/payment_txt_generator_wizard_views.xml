<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- payment.txt.generator.wizard form view -->
        <record id="payment_txt_generator_wizard_view_form" model="ir.ui.view">
            <field name="name">payment.txt.generator.wizard.view.form</field>
            <field name="model">payment.txt.generator.wizard</field>
            <field name="arch" type="xml">
                <form string="txt generator">
                    <sheet>
                        <group>
                            <group>
                                <field name="transmission_date"/>
                            </group>
                            <group>
                                <field name="txt_setting_id" widget="selection"/>
                                <span>If you do not select a configuration file, the system will automatically search for a configuration for the selected bank.</span>
                            </group>
                        </group>
                    
                    <footer>
                        <button name="generate_txt" type="object" string="Generate Txt" class="btn-primary"/>
                        <button special="cancel" string="Cancel" class="oe_link"/>
                    </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <!--<act_window id="payment_txt_generator_wizard_action"
            name="Txt Generator"
            binding_model="account.batch.payment"
            res_model="payment.txt.generator.wizard"
            view_mode="form"
            view_id="payment_txt_generator_wizard_view_form"
            target="new"/>-->
        
        
        <record id="payment_txt_generator_wizard_action" model="ir.actions.act_window">
            <field name="name">Txt Generator</field>
            <field name="res_model">payment.txt.generator.wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_mode">form</field>
            <field name="context">{}</field>
           
            <field name="search_view_id" ref="payment_txt_generator_wizard_view_form"/>
        </record>
        
        
        
        
    </data>
</odoo>