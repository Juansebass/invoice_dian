<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        <!-- payment.txt.generator.wizard form view -->
        <record id="payment_txt_generator_hr_wizard_view_form" model="ir.ui.view">
            <field name="name">payment.txt.generator.hr.wizard.view.form</field>
            <field name="model">payment.txt.generator.hr.wizard</field>
            <field name="arch" type="xml">
                <form string="txt generator">
                    <sheet>
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" required="1"/>
                        </h1>
                        <group>
                            <group>
                                <field name="company_id" readonly="1"/>
                                <field name="transmission_date" required="1"/>
                                <field name="date" required="1"/>
                            </group>
                            <group>
                                <field name="journal_id" domain="[('type','=','bank')]" required="1"/>
                                <field name="txt_setting_id" widget="selection"/>
                                <span>Si no selecciona un archivo de configuraci칩n, el sistema buscar치 autom치ticamente una configuraci칩n para el banco seleccionado.</span>
                                <field name="payment_type_id" required="1"/>
                            </group>
                        </group>
                        <group attrs="{'invisible': ['|',('txt_filename','=',False),('txt_file','=',False)]}">
                            <field name="txt_filename" invisible="1" force_save="1"/>
                            <field name="txt_file" readonly="1" filename="txt_filename" widget="binary" force_save="1"/>
                        </group>
                    </sheet>
                    <footer>
                        <button name="generate_txt_nomina" type="object" string="Generate Txt" class="btn-primary"/>
                        <button special="cancel" string="Cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="payment_txt_payslip_run_wizard_action"
            name="Txt Generator"
            binding_model="hr.payslip.run"
            res_model="payment.txt.generator.hr.wizard"
            view_mode="form"
            view_id="payment_txt_generator_hr_wizard_view_form"
            target="new"/>
        
    </data>
</odoo>