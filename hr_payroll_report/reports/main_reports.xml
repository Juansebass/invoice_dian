<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Paper Format-->
        <record id="paper_format_payslip" model="report.paperformat">
            <field name="name">Payslip</field>
            <field name="default" eval="True"/>
            <field name="format">Letter</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Landscape</field>
            <field name="margin_top">7</field>
            <field name="margin_bottom">7</field>
            <field name="margin_left">10</field>
            <field name="margin_right">10</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">3</field>
            <field name="dpi">90</field>
        </record>

        <!-- inherit Action Report -->
        <record id="hr_payroll.action_report_payslip" model="ir.actions.report">
            <field name="name">Payslip</field>
            <field name="model">hr.payslip</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">hr_payroll.report_payslip</field>
            <field name="report_file">hr_payroll.report_payslip</field>
            <field name="print_report_name">'Payslip - %s' % (object.employee_id.name)</field>
            <field name="binding_model_id" ref="hr_payroll.model_hr_payslip"/>
            <field name="binding_type">report</field>
            <field name="paperformat_id" ref="paper_format_payslip"/>
        </record>

        <record id="action_report_withholding_tax" model="ir.actions.report">
            <field name="name">Print Withholding Tax</field>
            <field name="model">hr.payslip</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">hr_payroll_report.withholding_report_pdf</field>
            <field name="report_file">hr_payroll_report.withholding_report_pdf</field>
            <field name="print_report_name">'Rt'</field>
            <field name="binding_model_id" ref="hr_payroll.model_hr_payslip"/>
            <field name="binding_type">report</field>
            <field name="menu">False</field>
        </record>


    </data>
</odoo>
